<!DOCTYPE validators PUBLIC
        "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
        "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="magazine.magazineName">
		<field-validator type="requiredstring">
            <message>Name is required</message>
        </field-validator>
	</field>
	<field name="magazine.publishDate">
		<field-validator type="requiredstring">
            <message>Publish Date is required</message>
        </field-validator>
	</field>
	<field name="magazine.price">
		<field-validator type="regex">
            <param name="expression"><![CDATA[(\d)*.\d{2}]]></param>
			<message>Price must be a valid amount ex. 2.99</message>
        </field-validator>
	</field>
	<field name="magazine.articles">
		<field-validator type="fieldexpression">
            <param name="expression"><![CDATA[magazine.articles.length > 0]]></param>
			<message>Article 1 information is required.</message>
        </field-validator>
	</field>
</validators>