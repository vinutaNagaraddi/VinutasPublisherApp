<!DOCTYPE validators PUBLIC
        "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
        "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="magazine.magazineName">
		<field-validator type="requiredstring">
            <message>Name is required</message>
        </field-validator>
	</field>
	<field name="magazine.publishDate">
        <field-validator type="date">
  			<param name="min">01/01/1990</param>
 			 <message>Publish Date must be after ${min}</message>
  		</field-validator>
	</field>
	<field name="magazine.price">
		<field-validator type="double">
			<param name="minInclusive">0.00</param>
			<message>Price must be larger than 0.00</message>
        </field-validator>
	</field>
</validators>